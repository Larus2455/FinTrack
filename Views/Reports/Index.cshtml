@{
    ViewData["Title"] = "Reports";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Financial App</title>
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #bb86fc;
            margin-bottom: 30px;
        }

        .report-section {
            background-color: #1e1e1e;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .report-section h2 {
                color: #bb86fc;
                margin-bottom: 15px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            table th, table td {
                border: 1px solid #333;
                padding: 10px;
                text-align: left;
            }

            table th {
                background-color: #1e1e1e;
                color: #bb86fc;
            }

            table tr:nth-child(even) {
                background-color: #222;
            }

        .chart-container {
            background-color: #1e1e1e;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 20px;
            margin-top: 20px;
        }

        .chart {
            width: 100%;
            height: 300px;
            background-color: #222;
            border-radius: 8px;
        }

        .action-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #00c853; /* Зеленый акцент */
            color: #121212;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            text-align: center;
            margin-top: 20px;
        }

            .action-button:hover {
                background-color: #00e676; /* Светлый зеленый */
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Financial Reports</h1>

        <!-- Report Section -->
        <div class="report-section">
            <h2>Monthly Transactions</h2>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2023-10-01</td>
                        <td>Groceries</td>
                        <td>$150.00</td>
                        <td>Completed</td>
                    </tr>
                    <tr>
                        <td>2023-10-05</td>
                        <td>Utilities</td>
                        <td>$80.00</td>
                        <td>Pending</td>
                    </tr>
                    <tr>
                        <td>2023-10-10</td>
                        <td>Salary Deposit</td>
                        <td>$3000.00</td>
                        <td>Completed</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Chart Section -->
        <div class="chart-container">
            <h2>Spending Overview</h2>
            <div class="chart">
                <!-- Placeholder for chart -->
                <p style="text-align: center; line-height: 300px;">Chart will be displayed here</p>
            </div>
        </div>

        <!-- Action Buttons -->
        <div style="text-align: center;">
            <button class="action-button">Generate Report</button>
            <button class="action-button">Download PDF</button>
        </div>
    </div>
</body>
</html>